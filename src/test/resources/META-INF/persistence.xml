<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
             https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <!-- 游댳 Tesztadatb치zis (JUnit k칬rnyezet) -->
    <persistence-unit name="flamingoPU_test" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- 游댲 Regisztr치lt entit치sok -->
        <class>hu.flamingo.app.model.User</class>
        <class>hu.flamingo.app.model.Product</class>

        <properties>
            <!-- 游댳 JDBC driver 칠s adatb치zis -->
            <property name="jakarta.persistence.jdbc.driver" value="org.sqlite.JDBC"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:sqlite:data/db/flamingo_test.db"/>

            <!-- 游댳 Hibernate dialect (SQLite) -->
            <property name="hibernate.dialect" value="org.hibernate.community.dialect.SQLiteDialect"/>

            <!-- 游댳 Tesztekhez: minden fut치skor 칰j DB -->
            <property name="hibernate.hbm2ddl.auto" value="create-drop"/>

            <!-- 游댳 Tesztk칬rnyezetben nem kell SQL log -->
            <property name="hibernate.show_sql" value="false"/>
        </properties>
    </persistence-unit>

</persistence>
