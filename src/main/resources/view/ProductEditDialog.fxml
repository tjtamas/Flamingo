<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.GridPane?>

<DialogPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="hu.flamingo.app.controller.ProductEditDialogController">

    <content>
        <GridPane hgap="10" vgap="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <Label text="Név:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
            <TextField fx:id="txtName" GridPane.rowIndex="0" GridPane.columnIndex="1" />

            <Label text="Kategória:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
            <ComboBox fx:id="cmbCategory" GridPane.rowIndex="1" GridPane.columnIndex="1" />

            <Label text="Szegmens:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
            <ComboBox fx:id="cmbSegment" GridPane.rowIndex="2" GridPane.columnIndex="1" />

            <Label text="VBS érték (Ft):" GridPane.rowIndex="3" GridPane.columnIndex="0" />
            <TextField fx:id="txtVbsValue" GridPane.rowIndex="3" GridPane.columnIndex="1" />
        </GridPane>
    </content>

    <buttonTypes>
        <ButtonType text="Mentés" buttonData="OK_DONE" />
        <ButtonType text="Mégse" buttonData="CANCEL_CLOSE" />
    </buttonTypes>
</DialogPane>
