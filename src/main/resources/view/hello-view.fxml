<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.BorderPane?>
<BorderPane fx:id="root"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="hu.flamingo.app.HelloController"
            prefHeight="700.0" prefWidth="1000.0">

    <left>
        <VBox spacing="10" style="-fx-padding: 15; -fx-background-color: #f0f0f0;" prefWidth="200">
            <Label text="Flamingo" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-padding: 0 0 10 0;"/>

            <Button fx:id="navButtonErtesites" text="Értékesítés" prefWidth="170" style="-fx-font-size: 14px;"/>
            <Button fx:id="navButtonRiport" text="Riport" prefWidth="170" style="-fx-font-size: 14px;"/>
            <Button fx:id="navButtonModositas" text="Adatkezelés" prefWidth="170" style="-fx-font-size: 14px;"/>
            <Button fx:id="navButtonDolgozok" text="Dolgozók" prefWidth="170" style="-fx-font-size: 14px;"/>
        </VBox>

    </left>

    <center>
        <AnchorPane fx:id="mainContentArea" style="-fx-padding: 20;">
            <children>
                <Label text="Válassz egy menüpontot a bal oldalon..." style="-fx-font-size: 18px;"/>
            </children>
        </AnchorPane>
    </center>

</BorderPane>